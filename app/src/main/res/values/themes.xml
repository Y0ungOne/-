<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CongestionObserver" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.CongestionObserver" parent="Base.Theme.CongestionObserver" />

    <!-- Define the app theme -->
    <style name="Theme.MissingApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowSplashScreenBackground" tools:targetApi="31">@color/intro_background</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="31">@mipmap/logo</item>
        <item name="android:windowSplashScreenIconBackgroundColor" tools:targetApi="31">@color/intro_animaicon</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="31">500</item>
    </style>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="android:fontFamily">@font/font_regular</item>
    </style>

    <!-- Bold text style -->
    <style name="BoldText">
        <item name="android:fontFamily">@font/font_bold</item>
    </style>

    <!-- ExtraBold text style -->
    <style name="ExtraBoldText">
    <item name="android:fontFamily">@font/font_extrabold</item>
    </style>
    <!--버튼색-->
    <style name="YellowButton" parent="Widget.AppCompat.Button">
        <item name="android:background">#FFF500</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/font_regular</item>
    </style>

</resources>
